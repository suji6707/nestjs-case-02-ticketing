{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit",
        "source.organizeImports.biome": "explicit"
    },
    "prettier.tabWidth": 4,
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.insertSpaces": false
}
